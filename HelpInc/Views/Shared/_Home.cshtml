<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpInc</title>

    @* Framework's CSS *@
    <link rel="stylesheet" type="text/css" href="~/lib/semantic/semantic.css">
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome-free/css/all.css">
    <link rel="stylesheet" type="text/css" href="~/lib/glide.js/dist/css/glide.core.css">
    <link rel="stylesheet" type="text/css" href="~/lib/glide.js/dist/css/glide.theme.css">

    @* Link's CSS *@
    <link rel="stylesheet" type="text/css" href="~/css/Home/Index.css">
    <link rel="stylesheet" type="text/css" href="~/css/Generic/Superior-menu.css">
    <link rel="stylesheet" type="text/css" href="~/css/Generic/Carousel.css">

    @* Font's *@
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">

    @* Link's JS *@
    <script defer type="text/javascript" src="~/js/Home/Index.js"></script>
    <script defer type="text/javascript" src="~/js/Generic/Carousel.js"></script>
    <script defer type="text/javascript" src="~/js/Generic/Rating.js"></script>

    @* Framework's JS *@
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/semantic/semantic.js"></script>
    <script type="text/javascript" src="~/lib/glide.js/dist/js/glide.js"></script>
</head>
<body>
    @* Menu Superior *@
    <header>
        <nav>
            <div class="ui large top fixed menu">
                <div class="item">
                    <img class="ui mini image" src="https://semantic-ui.com/images/wireframe/image.png">
                </div>

                <a class="item menu-item" asp-controller="Home" asp-action="Index">Home</a>

                <a class="item menu-item" asp-controller="System" asp-action="Index">Sistema</a>

                <div class="right menu">
                    <div class="item">
                        <div class="ui inverted blue button" onclick="location.href='@Url.Action("Index", "Register")'">Registrar</div>
                    </div>

                    <div id="Login-popup" class="item">
                        <a class="ui dropdown inverted red button" asp-controller="Login" asp-action="Index">Login</a>
                    </div>

                    <div class="ui fluid popup transition hidden center aligned grid">
                        <div class="column">
                            <form class="ui large form" asp-action="Logar" asp-controller="Login" method="post">
                                <div id="Row-email" class="row">
                                    <div class="field">
                                        <div class="ui labeled input">
                                            <div class="ui label">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <input id="Input-email" type="text" name="email" placeholder="E-mail">
                                        </div>
                                    </div>
                                </div>

                                <div id="Row-password" class="row">
                                    <div class="field">
                                        <div class="ui labeled input">
                                            <div class="ui label">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <input id="Input-password" type="password" name="password" placeholder="Senha">
                                        </div>
                                    </div>
                                </div>

                                <div id="Row-entrace" class="row">
                                    <button type="submit" id="Button-entrace" class="ui fluid large teal submit button">
                                    ENTRAR
                                    </button>
                                </div>
                            </form>

                            <div class="row">
                                <a id="Forgot-password" href="#">Esqueceu a senha ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
