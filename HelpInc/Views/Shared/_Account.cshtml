<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpInc</title>

    @* Framework's CSS *@
    <link rel="stylesheet" type="text/css" href="~/lib/semantic/semantic.css">
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome-free/css/all.css">

    @* Link's CSS *@
    <link rel="stylesheet" type="text/css" href="~/css/Generic/Superior-menu.css">

    @* Font's *@
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">


    @switch (ViewData["Title"])
    {
        case "Login":
            @* Link's CSS *@
            <link rel="stylesheet" type="text/css" href="~/css/Login/Index.css">
            <link rel="stylesheet" type="text/css" href="~/css/Generic/Superior-menu.css">

            @* Link's JS *@
            <script defer type="text/javascript" src="~/js/Login/Index.js"></script>
            <script defer type="text/javascript" src="~/js/Login/Validation.js"></script>
            break;
        case "Registro":
            @* Link's CSS *@
            <link rel="stylesheet" type="text/css" href="~/css/Registro/Index.css">
            <link rel="stylesheet" type="text/css" href="~/css/Generic/Superior-menu.css">

            @* Link's JS *@
            <script defer type="text/javascript" src="~/js/Registro/Index.js"></script>
            break;
    }

    @* Framework's JS *@
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/semantic/semantic.js"></script>

</head>
<body onload="randomBackgroundImage()">
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
